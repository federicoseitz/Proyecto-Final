<div class="container">
    <div class="row">
        <table class="table" class="table table-striped">
            <thead>
                <tr class="table-info">
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col" class=" text-right">Subtitulo</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Cuerpo</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr class="table-primary">
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td>{{subtitulo}}</td>
                    <td>{{{imagen}}}</td>
                    <td>{{cuerpo}}</td>
                    <td class="text-right">
                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                            <i class="fa-solid fa-pencil"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary" style="margin-top: 100px;">
                            <i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{#if is_search}}
        {{#unless novedades.lenght}}
        No se encontraron resultados para "<b>{{q}}</b>"
        {{/unless}}
        {{/if}}
        
    </div>
</div>