                    <td>{{subtitulo}}</td>
                    <td>{{{imagen}}}</td>
                    <td>{{cuerpo}}</td>
                    <td class="text-right">
                        <a href="/admin/novedades/modificar/{{id}}"class="btn btn-secondary">
