<div class="container-sm">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                            name="titulo" style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Titulo</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                            name="subtitulo" style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Subtitulo</label>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="imagen" id="inputGroupFile02">
                    <label class="input-group-text" for="inputGroupFile02">Upload</label>
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                            name="cuerpo" style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Cuerpo</label>
                    </div>
                </div>
                <button class="btn btn-primary me-md-2" type="submit">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>